# Chat Website API Wrapper Configuration

# Target chat website URL (without trailing slash)
CHAT_WEBSITE_URL=https://example-chat.com

# API endpoint path (if known, otherwise auto-discovery will be attempted)
# Leave empty to auto-discover
CHAT_API_ENDPOINT=

# Use Selenium browser automation instead of HTTP (true/false)
USE_SELENIUM=false

# Server configuration
HOST=127.0.0.1
PORT=8000

# Timeout for chat responses (seconds)
CHAT_TIMEOUT=120

# Selenium options (only used if USE_SELENIUM=true)
SELENIUM_HEADLESS=false
